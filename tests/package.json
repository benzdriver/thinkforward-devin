{
  "name": "thinkforward-ai-tests",
  "version": "1.0.0",
  "description": "Tests for ThinkForward AI backend",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup": "npm install && npm run install-backend-deps",
    "install-backend-deps": "npm install express mongoose jsonwebtoken bcryptjs dotenv cors helmet morgan express-validator"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.21.2",
    "express-validator": "^6.15.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.23",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "mongodb-memory-server": "^7.3.6",
    "supertest": "^6.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testTimeout": 30000,
    "moduleDirectories": [
      "node_modules",
      "../node_modules"
    ],
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/../node_modules"
    ]
  }
}
